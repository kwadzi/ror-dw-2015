<% if flash[:error] %>
  <div class="alert alert-danger">
    <p><strong><%= flash[:error] %></strong></p>
  </div>
<% end %>

<h1>Producers</h1>

<% @producers.each do |producer| %>
  <div class="row">
    <%= render 'show', producer: producer %>
  </div>
  <hr>
<% end %>

<br>

<div class="row">
  <div class="col-md-12">
    <p><%= link_to('New Producer', new_producer_path, class: 'btn btn-lg btn-success') unless (logged_in? || cannot?(:create, Producer)) %></p>
  </div>
</div>