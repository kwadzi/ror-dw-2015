<h1><%= @producer.name %>'s Products</h1>

<% @products.each do |product| %>
  <div class="row">
    <div class="col-md-6">
      <h2><%= link_to product.name, producer_product_path(@producer, product) %> <small><%= price_tag_for product %></small></h2>
    </div>
    <div class="col-md-6">
      <p style="margin-top: 20px">
        <%= render 'commands', product: product %>
      </p>
    </div>
  </div>
<% end %>

<br>

<div class="row">
  <div class="col-md-12">
    <%= link_to 'New Product', new_producer_product_path(@producer), class: 'btn btn-lg btn-success' %>
  </div>
</div>
